<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <size
                    android:height="50dp"
                    android:width="300dp"/>
            <corners
                    android:radius="50dp" />
            <stroke
                    android:width="1dp"
                    android:color="#000000"/>
            <solid
                    android:color="@color/white" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <size
                    android:height="50dp"
                    android:width="300dp"/>
            <corners
                    android:radius="50dp" />
            <stroke
                    android:width="1dp"
                    android:color="#000000"/>
            <solid
                    android:color="@color/white" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <size
                    android:height="10dp"
                    android:width="300dp"/>
            <corners
                    android:radius="25dp" />
            <stroke
                    android:width="3dp"
                    android:color="@color/colorPrimary"/>
            <solid
                    android:color="@color/white" />
        </shape>
    </item>
</selector>

