<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/details_item_height">

    <FrameLayout
            android:id="@+id/container_details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
        <ImageView
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:src="@drawable/circle"
                android:contentDescription="@string/item_details_icon_circle_content_description"/>

        <TextView
                android:id="@+id/item_details_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
            android:id="@+id/item_details_fueltype_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/container_details_price"
            android:paddingTop="@dimen/activity_vertical_margin"/>

    <TextView
            android:id="@+id/item_details_fueltype_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/container_details_price"
            android:layout_below="@id/item_details_fueltype_short"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

    <TextView
            android:id="@+id/item_details_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
    />

</RelativeLayout>