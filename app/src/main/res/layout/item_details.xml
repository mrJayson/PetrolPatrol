<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/details_item_height">

    <View
            android:id="@+id/item_details_colour"
            android:layout_width="@dimen/item_colour_gradient_width"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_alignParentStart="true"/>

    <FrameLayout
            android:id="@+id/container_details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/item_details_colour"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
                android:id="@+id/item_details_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
            android:id="@+id/item_details_fueltype_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/container_details_price"
            android:paddingTop="@dimen/activity_vertical_margin"/>

    <TextView
            android:id="@+id/item_details_fueltype_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/container_details_price"
            android:layout_below="@id/item_details_fueltype_short"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

    <TextView
            android:id="@+id/item_details_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
    />

</RelativeLayout>