<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height">

    <View
            android:id="@+id/item_favourites_colour"
            android:layout_width="@dimen/item_colour_gradient_width"
            android:layout_height="match_parent"/>

    <FrameLayout
            android:id="@+id/container_favourites_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/item_favourites_colour"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
                android:id="@+id/item_favourites_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
            android:id="@+id/item_favourites_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/container_favourites_price"
            android:paddingTop="@dimen/activity_vertical_margin"/>

    <TextView
            android:id="@+id/item_favourites_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_favourites_name"
            android:layout_toEndOf="@id/container_favourites_price"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

</RelativeLayout>